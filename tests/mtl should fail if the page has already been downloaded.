#!/bin/sh

mtl add thomaslevine.com --mtl-dir .mtl_dir-thomaslevine.com
test $? = 13

mtl add http://thomaslevine.com --mtl-dir .mtl_dir-thomaslevine.com
test $? = 13

mtl add http://thomaslevine.com/open-data/ --mtl-dir .mtl_dir-thomaslevine.com
test $? = 0

mtl add http://thomaslevine.com/open-data --mtl-dir .mtl_dir-thomaslevine.com
test $? = 13
